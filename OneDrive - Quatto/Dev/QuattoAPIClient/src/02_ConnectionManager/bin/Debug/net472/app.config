<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <!-- Assembly Configuration for SSIS Components -->
  <!-- This configuration file helps the .NET runtime locate SQL Server Integration Services assemblies -->
  <!-- 
    IMPORTANT: Before this project can compile and run, you must install:
    - SQL Server Data Tools (SSDT) or
    - Visual Studio with Integration Services extension
    
    SSDT Download: https://learn.microsoft.com/en-us/sql/ssdt/download-sql-server-data-tools-ssdt
    
    After installation, the SSIS assemblies will be available in:
    - C:\Program Files\Microsoft SQL Server\<VERSION>\Shared (for runtime)
    - C:\Program Files (x86)\Microsoft SQL Server\<VERSION>\SDK\Assemblies (for SDK)
  -->
  
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
  </startup>
  
  <runtime>
    <!-- Assembly Binding Redirects for SSIS Components -->
    <!-- These help resolve SSIS assembly versions when multiple versions are installed -->
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <!-- Support for SQL Server 2019 (v15) and SQL Server 2022 (v16) assemblies -->
      <dependentAssembly>
        <assemblyIdentity name="Microsoft.SqlServer.ManagedDTS" publicKeyToken="89845dcd8080cc91" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-99.0.0.0" newVersion="15.0.0.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="Microsoft.SqlServer.DTSRuntimeWrap" publicKeyToken="89845dcd8080cc91" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-99.0.0.0" newVersion="15.0.0.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="Microsoft.SqlServer.DTSPipelineWrap" publicKeyToken="89845dcd8080cc91" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-99.0.0.0" newVersion="15.0.0.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="Microsoft.SqlServer.PipelineHost" publicKeyToken="89845dcd8080cc91" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-99.0.0.0" newVersion="15.0.0.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
</configuration>
